{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Salas
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Bloco</th>
                <th>Pavimento</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.bloco }}</td>
                <td>{{ entity.pavimento }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sala_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('sala_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <a href="{{ path('sala_new') }}" class="btn btn-sm btn-success">Nova Sala</a>
    {% endblock %}

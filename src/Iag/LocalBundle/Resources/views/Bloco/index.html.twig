{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Blocos
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bloco_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bloco_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('bloco_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bloco_new') }}" class="btn btn-sm btn-success">Novo Bloco</a>
    {% endblock %}

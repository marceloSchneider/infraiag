{% extends '::bootstrap.html.twig' %}

{% block body -%}
    <h1>Vlans</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descricao</th>
                <th>Endereco</th>
                <th>Vlanrange</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vlan_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descricao }}</td>
                <td>{{ entity.endereco }}</td>
                <td>{{ entity.vlanRange }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vlan_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('vlan_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vlan_new') }}" class="btn btn-sm btn-success">Nova Vlan</a>
    {% endblock %}

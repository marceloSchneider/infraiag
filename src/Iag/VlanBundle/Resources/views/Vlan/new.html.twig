{% extends '::bootstrap.html.twig' %}

{% block body -%}
    <h1>Nova Vlan</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.descricao) }}
        {{ form_widget(form.descricao, { 'attr': { 'class': 'form-control' } }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.endereco) }}
        {{ form_widget(form.endereco, { 'attr': { 'class': 'form-control' } }) }}
    </div>    
    <div class="form-group">
        {{ form_label(form.vlanRange) }}
        {{ form_widget(form.vlanRange, { 'attr': { 'class': 'form-control' } }) }}
    </div>    
    <div class="form-group">
        {{ form_label(form.portaSwitch) }}
        {{ form_widget(form.portaSwitch, { 'attr': { 'class': 'form-control' } }) }}
    </div>    
    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-sm btn-success' } } ) }} <a href="{{ path('vlan') }}" class="btn btn-sm btn-info">Voltar para a lista</a>
    {{ form_end(form) }}
{% endblock %}

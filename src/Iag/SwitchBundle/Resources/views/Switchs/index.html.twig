{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Switchs
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hostname</th>
                <th>IP</th>
                <th>Numero de portas</th>
                <th>Marca</th>
                <th>Patrimonio</th>
                <th>Posição na pilha</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('switchs_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.switchCommon.hostname %}{{ entity.switchCommon.hostname }}{% endif %}</td>
                <td>{{ entity.switchCommon.ip }}</td>
                <td>{{ entity.numPortas }}</td>
                <td>{{ entity.marca }}</td>
                <td>{{ entity.patrimonio }}</td>
                <td>{{ entity.posicaoPilha }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('switchs_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('switchs_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('portaswitch_pswitch', { 'id': entity.id }) }}">Listar portas</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('switchs_new') }}" class="btn btn-sm btn-success">Novo Switch</a>
    {% endblock %}

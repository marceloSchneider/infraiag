{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Pilhas
{% endblock %}
{% block body -%}
    <h1>Lista de pilhas</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hostname</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('switchcommon_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.hostname }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('switchcommon_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('switchcommon_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('switchcommon_new') }}" class="btn btn-sm btn-success">Nova Pilha</a>
    {% endblock %}

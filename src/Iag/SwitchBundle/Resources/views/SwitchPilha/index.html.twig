{% extends '::bootstrap.html.twig' %}

{% block body -%}
    <h1>SwitchPilha list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hostname</th>
                <th>Numportas</th>
                <th>Marca</th>
                <th>Patrimonio</th>
                <th>Pilhafisica</th>
                <th>Posicaopilhalogica</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('switchpilha_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.hostname }}</td>
                <td>{{ entity.numPortas }}</td>
                <td>{{ entity.marca }}</td>
                <td>{{ entity.patrimonio }}</td>
                <td>{{ entity.pilhaFisica }}</td>
                <td>{{ entity.posicaoPilhaLogica }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('switchpilha_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('switchpilha_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('switchpilha_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Portas do Switch
{% endblock %}
{% block body %}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Número da porta</th>
                <th>POE</th>
                <th>Stauts do POE</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('portaswitch_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numPorta }}</td>
                <td>{{ entity.isPOE }}</td>
                <td>{{ entity.pOEStatus }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('portaswitch_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('portaswitch_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('portaswitch_new') }}" class="btn btn-sm btn-success">Nova Porta</a>
    {% endblock %}

{% extends '::base.html.twig' %}
{% block titulo %}
    Lista de Pilhas
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ip</th>
                <th>Hostname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pilha_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.hostname }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pilha_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('pilha_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pilha_new') }}">
                Nova Pilha
            </a>
        </li>
    </ul>
    {% endblock %}

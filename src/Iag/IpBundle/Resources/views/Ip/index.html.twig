{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de IPs
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Endereco</th>
                <th>Vlan</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ip_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.endereco }}</td>
                <td>{{entity.vlan}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ip_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ip_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ip_new') }}" class="btn btn-sm btn-success">Novo IP</a>
    {% endblock %}

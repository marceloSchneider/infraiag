{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Patch Panel
{% endblock %}
{% block body -%}

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Numero de portas</th>
                <td>{{ entity.numPortas }}</td>
            </tr>
        </tbody>
    </table>
    
    {{ form_start(delete_form) }}
        <a href="{{ path('patch_edit', { 'id': entity.id }) }}"class="btn btn-sm btn-primary">Editar</a> <a href="{{ path('patch_index') }}" class="btn btn-sm btn-info">Voltar para a lista</a> {{ form_widget(delete_form.submit, {'attr': { 'class': 'btn btn-sm btn-danger' } } ) }}
    {{ form_end(delete_form) }}
{% endblock %}

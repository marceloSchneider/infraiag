{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Patch Panels
{% endblock %}
{% block body -%}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero de portas</th>
                <th>Número do Patch Panel</th>
                <th>Rack</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('patch_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numPortas }}</td>
                <td>{{ entity.pilha }}</td>
                <td>{{ entity.rack }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('patch_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('patch_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                     <li>
                        <a href="{{ path('pporta_portas', { 'id': entity.id }) }}">Listar portas</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('patch_new') }}" class="btn btn-sm btn-success">Novo Patch Panel</a>
    {% endblock %}

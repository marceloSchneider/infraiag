{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Voice Panels
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rack</th>
                <th>Numero de portas</th>
                <th>Numero</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('voicepanel_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rack.identificacao }}</td>
                <td>{{ entity.numPortas }}</td>
                <td>{{ entity.numero }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('voicepanel_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('voicepanel_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('voiceporta_portas', { 'id': entity.id }) }}">Listar portas</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('voicepanel_new') }}" class="btn btn-sm btn-success">Novo Voice Panel</a>
    {% endblock %}

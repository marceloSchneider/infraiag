{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Pontos
{% endblock %}
{% block body -%}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero do ponto</th>
                <th>Patch Pannel</th>
                <th>Sala</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pporta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.patch.pilha }}</td>
                <td>{{ entity.sala }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pporta_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('pporta_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pporta_new') }}" class="btn btn-sm btn-success">Novo ponto</a>
    {% endblock %}

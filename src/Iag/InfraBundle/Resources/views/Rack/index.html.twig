{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Lista de Racks
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identificação</th>
                <th>Quantida de U's</th>
                <th>Local</th>
                
                <th>Açoes</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('rack_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.identificacao }}</td>
                <td>{{ entity.quantidadeU }}</td>
                <td>{{ entity.sala }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('rack_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('rack_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rack_new') }}" class="btn btn-sm btn-success">Novo Rack</a>
    {% endblock %}

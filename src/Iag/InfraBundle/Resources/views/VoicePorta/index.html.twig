{% extends '::bootstrap.html.twig' %}
{% block titulo %}
    Voice Porta
{% endblock %}
{% block body -%}
    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Ramal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('voiceporta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.ramal }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('voiceporta_show', { 'id': entity.id }) }}">Detalhar</a>
                    </li>
                    <li>
                        <a href="{{ path('voiceporta_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <a href="{{ path('voiceporta_new') }}" class="btn btn-sm btn-success">Nova Porta</a>
    {% endblock %}
